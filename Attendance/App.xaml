<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Attendance"             
             x:Class="Attendance.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <!--<ResourceDictionary x:Key="LightTheme" Source="Resources/Styles/LightTheme.xaml" />
                <ResourceDictionary x:Key="DarkTheme" Source="Resources/Styles/DarkTheme.xaml" />-->

            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ColumnHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Body"/>                
            </Style>

            <Style x:Key="BodyLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Body"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>

            

        </ResourceDictionary>

       
    </Application.Resources>
</Application>
